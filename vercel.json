{
  "version": 2,
  "builds": [
    {
      "src": "package.json",          
      "use": "@vercel/static-build",  
      "config": {
        "distDir": "build"           
      }
    },
    {
      "src": "server.js",            
      "use": "@vercel/node"           
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1"           // Serve static files from the public directory
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"           // Route API requests to server.js
    }
  ]
}
